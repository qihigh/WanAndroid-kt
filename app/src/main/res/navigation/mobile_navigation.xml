<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_main">

    <fragment
        android:id="@+id/nav_main"
        android:name="com.qihuan.wanandroid.ui.main.MainFragment"
        android:label="main"
        tools:layout="@layout/main_fragment">

        <action
            android:id="@+id/action_main_to_login"
            app:destination="@id/nav_login"
            app:enterAnim="@anim/nav_fragment_enter"
            app:exitAnim="@anim/nav_fragment_exit"
            app:popEnterAnim="@anim/nav_fragment_pop_enter"
            app:popExitAnim="@anim/nav_fragment_pop_exit" />
    </fragment>


    <fragment
        android:id="@+id/nav_login"
        android:name="com.qihuan.wanandroid.ui.login.LoginFragment"
        android:label="login"
        tools:layout="@layout/login_fragment">

    </fragment>
</navigation>